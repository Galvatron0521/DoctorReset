<?xml version="1.0" encoding="utf-8"?>
<com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:background="@color/white"
    android:orientation="horizontal"
    app:contentView="@+id/content"
    app:rightMenuView="@+id/right">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_back"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="13dp"
            android:src="@color/bottom_red" />

        <TextView
            android:id="@+id/hz_xing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/img_back"
            android:layout_alignTop="@+id/img_back"
            android:layout_alignRight="@+id/img_back"
            android:layout_alignBottom="@+id/img_back"
            android:gravity="center"
            android:text="姓"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/hz_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/img_back"
            android:layout_alignBottom="@+id/img_back"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/img_back"
            android:gravity="center_vertical"
            android:text="姓名"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/right"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_table"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/red" />

    </LinearLayout>

</com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>